<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ua.ifntung.webstore.model.Order" table="orders" schema="public" catalog="bookstore-spring">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="username" column="username"/>
        <property name="bookname" column="bookname"/>
        <property name="FName" column="firstname"/>
        <property name="LName" column="lastname"/>
        <property name="city" column="city"/>
        <property name="phone" column="phonenumber"/>
        <property name="time" column="date"/>
    </class>
</hibernate-mapping>